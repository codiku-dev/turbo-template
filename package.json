{
  "name": "my-turborepo",
  "version": "0.0.0",
  "private": true,
  "description": "",
  "author": "",
  "license": "UNLICENSED",
  "scripts": {
    "#--------------------------GENERAL------------------------------#":"",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "#--------------------------TESTING------------------------------#":"",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "#---------------------------API---------------------------------#":"",
    "db:start": "turbo run db:start --filter=api",
    "db:update": "cd apps/api && bun run db:update",
    "db:studio": "turbo run db:studio --filter=api"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "prettier": "^3.2.5",
    "turbo": "^2.7.5"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.15",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
